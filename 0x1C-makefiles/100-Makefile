#Makefile using variables and rules
SRC = main.c school.c
CC = gcc
OBJ = $(SRC:%.c=%.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
.PHONY: all clean oclean fclean re
all:  $(OBJ) m.h
	$(CC) $(OBJ) $ -o $(NAME)
clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: clean oclean
re: oclean all

